{
    "manifest_version": 3,
    "name": "DePhished",
    "description": "An extension that alerts when an email is suspicious of phishing",
    "version": "1.0",
    "icons": {
        "128": "assets/logo.png"
    },
    "permissions": [
        "storage",
        "activeTab",
        "scripting",
        "tabs",
        "identity"
    ],
    "oauth2": {
        "client_id": "947052239706-g002c42fbsvadt1i7h5urm9lq745nivt.apps.googleusercontent.com",
        "scopes": [
            "https://www.googleapis.com/auth/gmail.readonly",
            "https://mail.google.com/",
            "https://www.googleapis.com/auth/userinfo.profile"
        ]
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["*://www.mail.google.com/*"],
            "js": ["contentScript.js"]
        }
    ],
    "host_permissions": [
        "http://mail.google.com/*",
        "https://mail.google.com/*",
        "https://oauth-provider-domain.com/*"
    ],
    "action": {
        "default_popup": "popup.html"
    }
}